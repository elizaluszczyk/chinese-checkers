<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chinesecheckers.gui.BoardController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="37.0" prefWidth="600.0">
         <children>
            <Label fx:id="turnLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="25.0" style="-fx-background-color: rgb(248, 8, 8); -fx-background-radius: 8;" text="Oponents turn" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="SOMETIMES">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Label>
            <Button fx:id="skipButton" mnemonicParsing="false" onAction="#onSkipButtonPress" text="Skip" visible="false">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="winLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="20.0" layoutY="16.0" prefHeight="26.0" prefWidth="316.0" style="-fx-background-color: rgb(255, 215, 1); -fx-background-radius: 8;" text="You won!" textAlignment="CENTER" visible="false">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      <AnchorPane fx:id="mainPane" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0">

</AnchorPane>
   </children>
</VBox>
